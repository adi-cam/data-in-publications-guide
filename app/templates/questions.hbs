<h1>
  Questions
</h1>

{{#each-in this.data.questionsGrouped as |topic questions|}}
  <h2>{{topic}}</h2>

  {{#each questions as |question|}}
    <h3>
      {{question.title}}
      ({{question.num}})
      {{#if question.condition}}
        [{{question.condition}}]
      {{/if}}
    </h3>

    <p>{{question.desc}}</p>

    {{#if (eq question.format "text")}}
      <p>
        <label>
          <input type="string" />
        </label>
      </p>
    {{else if (or (eq question.format "multiple") (eq question.format "single"))}}
      <ul>
        {{#each question.options as |option|}}
          <li>
            <label>
              <input type={{if (eq question.format "multiple") "checkbox" "radio"}} name={{option.letter}} />
              {{option.title}}
              ({{option.letter}})
            </label>
          </li>
        {{/each}}
      </ul>
    {{/if}}
  {{/each}}
{{/each-in}}